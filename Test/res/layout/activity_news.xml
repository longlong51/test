<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/head1" >

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="15dp"
            android:background="@layout/exit"
            android:text="退出"
            android:textColor="#f66634"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="活 动 新 闻"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <Button
            android:id="@+id/my"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="15dp"
            android:background="@drawable/contact" />
    </FrameLayout>

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head"
        android:background="@drawable/pic3" />

    <FrameLayout
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image" >

        <EditText
            android:id="@+id/sear"
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:background="@layout/list_bt"
            android:hint="搜索活动"
            android:paddingLeft="45dp"
            android:paddingRight="60dp"
            android:textColor="#f66634"
            android:textColorHint="#ffcccc"
            android:textSize="15dp"
            android:textStyle="italic" >
        </EditText>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginStart="10dp"
            android:background="@drawable/search"
            android:visibility="visible" />

        <Button
            android:id="@+id/search1"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="right"
            android:layout_marginLeft="25dp"
            android:background="@layout/se"
            android:text="搜索"
            android:textColor="#ffffff"
            android:textSize="15dp" />
    </FrameLayout>

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search"
        android:layout_marginBottom="65dp"
        android:background="@layout/bg_border" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/head1" >

        <Button
            android:id="@+id/a1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bank" />

        <Button
            android:id="@+id/a2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/home" />

        <Button
            android:id="@+id/a3"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/degree" />

        <Button
            android:id="@+id/a4"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/camera1" />
    </FrameLayout>

</RelativeLayout>